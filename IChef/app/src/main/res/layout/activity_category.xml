<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hci.team.ichef.Category"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for a Recipe"
        android:background="#ffff">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/soups"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/soups" />

        <ImageView
            android:id="@+id/sideDishes"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/side_dishes" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/saladsBtn"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/salads" />

        <ImageView
            android:id="@+id/mainDishes"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/main_dishes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="0.02">


        <ImageView
            android:id="@+id/desserts"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/desserts" />


        <ImageView
            android:id="@+id/snacks"
            android:layout_width="190dp"
            android:layout_height="177dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/snacks" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap a Category"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"/>


</LinearLayout>


