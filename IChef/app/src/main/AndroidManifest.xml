<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hci.team.ichef">

    <uses-feature android:name="android.hardware.sensor.light"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_chef"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_chef"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Category">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeSelection"/>
        <activity android:name=".Recipe"
            android:label="@string/title_activity_recipe"
            android:theme="@style/AppTheme"/>

        <activity android:name=".IChef">
        </activity>
    </application>

</manifest>